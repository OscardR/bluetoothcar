<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ControllerActivity$PlaceholderFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridControls"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:useDefaultMargins="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑ Avanzar"
            android:id="@+id/btnForward"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            style="@android:style/Widget.Button"
            android:minWidth="100dp"
            android:onClick="onClickBtnFwd" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↓ Retroceder"
            android:id="@+id/btnBack"
            android:layout_row="2"
            android:layout_column="1"
            style="@android:style/Widget.Button"
            android:minWidth="100dp"
            android:onClick="onClickBtnBack" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Izquierda"
            android:id="@+id/btnLeft"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            style="@android:style/Widget.Button"
            android:minWidth="100dp"
            android:onClick="onClickBtnLeft" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgIcon"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal|fill_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Derecha →"
            android:id="@+id/btnRight"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:singleLine="true"
            style="@android:style/Widget.Button"
            android:minWidth="100dp"
            android:onClick="onClickBtnRight" />
    </GridLayout>
</RelativeLayout>
